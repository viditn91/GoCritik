<div id="user-header" class="page-header title-style fill-grey">
  <div class="row-fluid">
    <div class="pull-left offset1 top-buffer">
      <%= render partial: 'pictures/picture', locals: { object: @user, size: "150"} %>
    </div>
    <div class="span8 top-buffer">
      <div class="row-fluid">
        <div class="pull-left"><h1 class="heading"><%= get_name(@user) %></h1></div>
      </div>
      <div class="row-fluid top-buffer">
        <div class="pull-left row-fluid">
          <div class="span1">
            <div class="magnify"><%= @user.ratings.count %></div>
            <div><%= 'rating'.pluralize(@user.ratings.count).upcase %></div>
          </div>
          <div class="span1">
            <div class="magnify"><%= @user.reviews.count %></div>
            <div><%= 'review'.pluralize(@user.reviews.count).upcase %></div>
          </div>
        </div>
      </div>
      <div class="row-fluid top-buffer">
        <div class="pull-left">GoCritik member since <%=  distance_of_time_in_words(Time.now, @user.created_at) %></div>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span8 offset1">
    <div class="row-fluid">
      <h3 class="heading border-down">Reviews by <%= @user.email %><h3>
    </div>
    <div class="row-fluid">
      <%= render partial: 'users/user_review', collection: @user.reviews, as: :review %>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span8 offset1">
    <div>
      <h3 class="heading border-down">Ratings by <%= @user.email %><h3>
    </div>
    <div class="row-fluid">
    </div>
  </div>
</div>