<% present @user do |user_presenter| %>
  <div class="edit-profile">
    <div class="page-header title-style fill-grey">
      <h1 class="heading offset1">Editing Profile</h1>
    </div>
    <div class="row-fluid">
      <div class="span2 offset1">
        <%= user_presenter.avatar(:full, "img-polaroid") %>
        <div class="pull-right">
          <%= user_presenter.remove_avatar %>
        </div>
      </div>
      <div class="offset1 pull-left">
        <div class="row-fluid"><h4 class="heading border-down">DETAILS</h4></div>
        <div class="row-fluid top-buffer">
          <%= render 'form' %>
        </div>
        <div class="row-fluid"><h4 class="heading border-down">PICTURE</h4></div>
        <div class="row-fluid top-buffer">
          <%= render partial: 'pictures/form', locals: { object: @user } %>
        </div>
      </div>
    </div>
  </div>
<% end %>