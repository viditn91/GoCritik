<% resource_obj = review.resource %>
<div id="<%= 'review_' + review.id.to_s + '_container' %>", class="listing">
  <div class="row-fluid">
    <div class="pull-left">
      <%= image_tag "resource.jpg", size: "80" %>
    </div>
    <div class="span8">
      <div><h4 class="heading"><%= link_to resource_obj.name, resource_obj, 'data-no-turbolink' => true %></h4></div>
      <%= liquidize(@review_keywords_template.content, 'resource' => resource_obj).html_safe %>
    </div>
    <div class="pull-right">
      <%= render partial: 'reviews/rating_meter', locals: { review: review } %>
    </div>
  </div>
  <div class="top-buffer row-fluid">
    <%= review.content.truncate(300) %> <%= link_to "See full review", review %>
  </div>
</div>