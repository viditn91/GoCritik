<div id="resource-header" class="page-header title-style fill-grey">
  <div class="row-fluid">
    <div class="span8 offset1 top-buffer">
      <div class="row-fluid">
        <div class  ="span8"><h1 class="heading"><%= @resource.name %></h1></div>
        <div class="pull-right top-buffer">
          <h4 class="heading">Your rating: <span id="star-rating"><%= render 'rating_button' %><span></h4>
        </div>
      </div>
      <div class="row-fluid">
        <h4><i class="icon-map-marker">
          <%= get_field_value(@resource, @location_field) %>
          <%= get_field_value(@resource, @city_field) %>
        </i></h4>
      </div>
      <div class="row-fluid top-buffer"><%= @resource.description %></div>
    </div>
    <div class="span2"> 
      <div class="pull-right top-buffer">
        <div class="row-field top-buffer">
          <div class="rating-meter-label">
            RATED AS
          </div>
          <div id="score" class="rating-meter">
            <%= calc_avg_rating(@resource) %>
          </div>
        </div>
        <div class="row-field top-buffer">
          <div class="pull-right">
            <div class="magnify pull-right"><span id="votes"><%= @resource.ratings.count %></span><i class="icon icon-ok"></i></div> 
            <div>RATINGS</div>
          </div>
        </div>
        <div class="row-field pull-right top-buffer">
          <div class="pull-right">
            <div class="magnify pull-right"><%= @resource.reviews.count %><i class="icon icon-pencil"></i></div>
            <div>REVIEWS</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span10 offset1 top-buffer">
      <ul class="inline">
      <% @resource.fields_values.each do |field_value| %>
        <% if !(field_value.field.name == 'Location' || field_value.field.name == 'City') %>
        <li class="side-buffer">
            <i class="icon-tag"></i>
            <%= field_value.field.name %>: <%= get_field_value(@resource, field_value.field) %>
        </li>
        <% end %>
      <% end %>
      </ul>
    </div>
  </div>  
</div>

<div class="row-fluid">
  <div class="span10 offset1">
    <div>
      <h3 class="heading">Write a Review for <%= @resource.name %><h3>
    </div>
    <div class="row-fluid">
     <%= render 'new_review' %>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span9 offset1">
    <div>
      <h3 class="heading">User Reviews for <%= @resource.name %><h3>
    </div>
    <div>
      <%= render partial: 'resources/resource_review', collection: @resource.reviews, as: :review %>
    </div>
  </div>
</div>