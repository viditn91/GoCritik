<%= form_for Comment.new, :html => { :class => "form" } do |f| %>
  <div class="span8">
    <div class="control-group">
      <div class="controls">
        <%= f.text_area :content, class: "span12" %>
      </div>
    </div>
    <div class="actions pull-right">
      <%= f.submit :class => 'btn btn-success'%>
    </div>
    <%= f.hidden_field :review_id, :value => review.id %>
  </div>
<% end %>