<% content_for :sub_heading do %>
  Showing <%= ResourceName %>
<% end %>
<div class="span8 offset1">
  <dl class="dl-horizontal">
    <% @resource_columns.each do |attr| %>
      <dt><strong><%= attr.humanize %>:</strong></dt>
      <dd><%= @resource.try attr.to_sym %></dd>
    <% end %>
    <% @resource.fields_values.each do |field_value| %>
      <dt><strong><%= field_value.field.name %>:</strong></dt>
      <dd><%= @resource.get_field_value(field_value.field) %></dd>
    <% end %>
  </dl>
  <div>
    <%= link_to 'Back', path_for_admin_resources_path, :class => 'btn' %>
    <%= link_to 'Edit', edit_admin_resource_path(@resource), :class => 'btn' %>
    <%= link_to 'Remove', admin_resource_path(@resource), :method => 'delete',
                :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-danger' %>
  </div>
</div>