<% content_for :sidebar do%>
  <ul class="nav nav-list">
    <li class="nav-header">Sidebar</li>
    <li><%= link_to "Home", admin_path %></li>
    <li><%= link_to "Manage #{ ResourceName.pluralize } ", admin_resources_path %></li>
  </ul>
<% end %>

<% if @fields.blank? %>
  <% flash[:notice] = "No Field created. Click on 'add a field'" %>
<% end %>

<div class="page-header">
  <h1>Listing <%= ResourceName %> Fields -</h1>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <% attributes = Field.column_names - ['id', 'created_at', 'updated_at'] %>
      <% attributes.each do |attr| %>
        <th><%= attr.humanize %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= render partial: @fields, locals: { attributes: attributes } %>
  </tbody>
</table>
<%= button_to "Add a field", new_admin_field_path, :class => "btn btn-primary", method: :get%>