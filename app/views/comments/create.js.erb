<% if flash.now[:alert].present? %>
  alert(<%= flash.now[:alert] %>);
<% else %>
  var review_container = $('#review_<%= @comment.review.id %>_sub_container');
  review_container.html("<%= escape_javascript render(@comment.review) %>");
  review_container.find('#current_comment').css({'background-color':'#ffffff'})
    .animate({'background-color':'#dddddd'},500)
    .animate({'background-color':'#F9F9F7'}, 400);
<% end %>