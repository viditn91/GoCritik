<div class="modal hide fade in" id="login">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">x</button>
    <h2><%= t(:sign_in) %></h2>
  </div>
  <div class="modal-body">
  <%= form_for(User.new, :url => session_path(:user)) do |f| %>
    <div><%= f.label :email, t(:email) %><br />
    <%= f.email_field :email, :autofocus => true %></div>

    <div><%= f.label :password, t(:password) %><br />
    <%= f.password_field :password %></div>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me, t(:remember_me) %></div>
    <% end -%>
    <div><%= f.submit t(:sign_in), :class => 'btn btn-small btn-success' %></div>
    <% end %>
  </div>
</div>