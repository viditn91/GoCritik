<div class="top-buffer row-fluid">
  <%= review.content %>
</div>
<div class="top-buffer row-fluid">
  <div class="pull-left">
    <ul class="inline">
      <li class="inline">
        <%= render partial: 'reviews/like_button', locals: { object: review } %>
      </li>
      <li class="inline">
        <%= render partial: 'reviews/delete_button', locals: { object: review } %>
      </li>
      <li class="inline timestamp minify">
        <%= distance_of_time_in_words(Time.now, review.created_at) + " ago" %>
      </li>
    </ul>
  </div>
  <div class="pull-right">
    <ul class="inline">
      <li class="inline heading">
        <span class="magnify"><%= review.comments.count %></span>
        <span class="minify"><%= 'comment'.pluralize(review.comments.count) %></span>
      </li>
      <li class="inline heading">
        <span class="magnify"><%= review.likes.count %></span>
        <span class="minify"><%= 'like'.pluralize(review.comments.count) %></span>
      </li>
    </ul>
  </div>
</div>
<div class="row-fluid comments-container">
  <%= render review.comments %>
  <%= render partial: 'reviews/new_comment', locals: {review: review} %>
</div>
